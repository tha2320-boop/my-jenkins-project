pipeline {
    agent any
    stages {
        stage('Fetch Code') {
            steps {
                echo 'Pulling code from GitHub...'
            }
        }
        stage('Build') {
            steps {
                echo 'Building our amazing app...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests successfully!'
            }
        }
    }
}
